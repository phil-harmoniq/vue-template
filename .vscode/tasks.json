{
    "version": "2.0.0",
    "type": "shell",
    "tasks": [
        {
            "label": "Build Web App",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceRoot}/src"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Restore Nuget Packages",
            "command": "dotnet",
            "args": [
                "restore"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Install NPM Packages",
            "command": "npm",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceRoot}/src"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build Local Docker Image",
            "command": "docker",
            "args": [
                "build",
                "${workspaceRoot}",
                "-t",
                "vue-template:local"
            ],
            "group": "build"
        },
        {
            "label": "Run Local Docker Image",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-p",
                "5000:80",
                "locuspromo/portal:local"
            ],
            "group": "build"
        }
    ]
}