{
    "version": "2.0.0",
    "type": "shell",
    "tasks": [
        {
            "label": "Build Web App",
            "command": "dotnet",
            "args": [ "build", "${workspaceRoot}/vue-template" ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Restore Nuget Packages",
            "command": "dotnet",
            "args": [ "restore", "${workspaceRoot}" ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Install NPM Packages",
            "command": "npm",
            "args": [ "install" ],
            "options": { "cwd": "${workspaceRoot}/src" },
            "problemMatcher": "$tsc-watch",
            "group": "build"
        },
        {
            "label": "Build Local Docker Image",
            "command": "docker",
            "args": [ "build", "${workspaceRoot}", "-t", "vue-template:local" ],
            "problemMatcher": "$tsc-watch",
            "group": "build"
        },
        {
            "label": "Run Local Docker Image",
            "command": "docker",
            "args": [ "run", "--rm", "-p", "5000:80", "vue-template:local" ],
            "problemMatcher": "$tsc-watch",
            "group": "build"
        }
    ]
}