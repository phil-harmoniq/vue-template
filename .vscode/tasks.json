{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Web App",
            "command": "dotnet",
            "type": "process",
            "args": [ "build", "${workspaceFolder}/vue-template.csproj" ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Restore Nuget Packages",
            "command": "dotnet",
            "type": "process",
            "args": [ "restore" ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Install NPM Packages",
            "command": "npm",
            "type": "process",
            "args": [
                "install"
            ],
            "problemMatcher": "$tsc-watch",
            "group": "build"
        }
    ]
}