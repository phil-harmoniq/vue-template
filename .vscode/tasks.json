{
    "version": "2.0.0",
    "type": "shell",
    "tasks": [
        {
            "label": "Build Web App",
            "command": "dotnet",
            "args": [ "build", "${workspaceRoot}" ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Restore Nuget Packages",
            "command": "dotnet",
            "args": [ "restore", "${workspaceRoot}" ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Install NPM Packages",
            "command": "npm install",
            "options": { "cwd": "${workspaceRoot}/src" },
            "problemMatcher": "$tsc-watch",
            "group": "build"
        }
    ]
}